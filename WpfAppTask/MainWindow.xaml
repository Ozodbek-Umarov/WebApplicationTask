<Window x:Class="WpfAppTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="LightGray">
            <RadioButton Name="ProductRadioButton" Content="Product" Margin="10" Checked="OnRadioButtonChecked"/>
            <RadioButton Name="CategoryRadioButton" Content="Category" Margin="10" Checked="OnRadioButtonChecked"/>
        </StackPanel>

        <Frame Name="ContentFrame" Grid.Column="1"/>
    </Grid>
</Window>

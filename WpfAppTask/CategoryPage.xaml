<Page x:Class="WpfAppTask.CategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="CategoryPage">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Left" Width="200" Background="LightGray">
                <Button Content="Add Category" Margin="10" Click="OnAddCategoryClicked"/>
                <Button Content="Update Category" Margin="10" Click="OnUpdateCategoryClicked"/>
                <Button Content="Delete Category" Margin="10" Click="OnDeleteCategoryClicked"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10">
                <TextBox x:Name="CategoryName" Width="200" Text="Category Name" Margin="5"/>
            </StackPanel>
            <DataGrid x:Name="CategoriesGrid" AutoGenerateColumns="True" Margin="10"/>
        </DockPanel>
    </Grid>
</Page>
